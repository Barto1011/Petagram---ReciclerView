<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/toolbar"
    android:elevation="@dimen/elevacion_actionbar"
    app:popupTheme="@style/Theme.AppCompat.Light"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/tbFootprintTBM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/petagram_dog_footprint"
            android:layout_marginLeft="@dimen/toolbarFootprint" />
        <TextView
            android:id="@+id/tbTituloTBM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo"
            android:textStyle="bold"
            android:textSize="@dimen/toolbarTitulo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/tbStartActionTBM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/petagram_star"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/toolbarFootprint"
            />
        <TextView
            android:id="@+id/tbLikedTotalTBM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="22dp"
            android:layout_marginRight="26dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>